<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/mTabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tabMode="fixed"
            android:background="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tabIndicatorColor="#fff"
            app:tabIndicatorHeight="0dp"
            app:tabTextColor="#000"
            app:tabSelectedTextColor="#4074E4"
            app:tabBackground="@null"
    />
    <TextView
            android:id="@+id/mTvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <Button
            android:id="@+id/mBtnKTX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:text="KTX"

    />


    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mBtnKTX"
            android:text="Argb"
            android:textAllCaps="false"
            android:id="@+id/mBtnArgb"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mBtnMotion"
            android:textAllCaps="false"
            android:text="Motion"
            app:layout_constraintTop_toBottomOf="@id/mBtnArgb"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mBtnConstrain"
            app:layout_constraintTop_toBottomOf="@id/mBtnMotion"
            android:textAllCaps="false"
            android:text="Constrain"
    />
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mBtnDialogFragment"
            android:text="DialogFragment"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/mBtnConstrain"
    />

    <RelativeLayout
            android:id="@+id/mRelaParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:background="@drawable/btn_press"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="TextView"
                android:gravity="center"
                android:textColor="@drawable/text_col"
                android:duplicateParentState="true"
        />

    </RelativeLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:id="@+id/mBtnDataBinding"
            android:text="Data Bingding"
            android:textAllCaps="false"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:id="@+id/mBtnDataBindingRecyclerView"
            android:text="Data Bingding RecyclerView"
            android:textAllCaps="false"
    />

</androidx.constraintlayout.widget.ConstraintLayout>