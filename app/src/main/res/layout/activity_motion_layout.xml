<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_scene"
        android:id="@+id/mMotion"
        tools:context=".MotionLayoutActivity">

    <ImageView
            android:id="@+id/mImg"
            android:layout_width="86dp"
            android:layout_height="86dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_launcher"
    />

    <FrameLayout
            android:id="@+id/mBottomBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
    >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
        />

    </FrameLayout>

    <LinearLayout
            android:id="@+id/mLinea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal"
    >

        <Button
                android:id="@+id/mBtnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="mBtnStart"
                android:layout_weight="1"
                android:textAllCaps="false"

        />

        <Button
                android:id="@+id/mBtnEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="mBtnEnd"
                android:layout_weight="1"
                android:textAllCaps="false"
        />

    </LinearLayout>

    <SeekBar
            android:id="@+id/mSeeKBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mLinea"
            android:layout_marginBottom="16dp"
    />

    <ImageView
            android:id="@+id/mImgMenu1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:id="@+id/mImgMenu2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:id="@+id/mImgMenu3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorThree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
               android:id="@+id/mImg1"
               android:src="@mipmap/ic_launcher"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
    />

    <Button android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/mBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:text="BTN"

    />


</androidx.constraintlayout.motion.widget.MotionLayout>