<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_scene"
        android:id="@+id/mMotion"
        tools:context=".MotionLayoutActivity">

    <ImageView
            android:id="@+id/mImg"
            android:layout_width="86dp"
            android:layout_height="86dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher"
    />


    <FrameLayout
            android:id="@+id/mBottomBar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
        />

    </FrameLayout>

    <ImageView
            android:id="@+id/mImgMenu1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="120dp"
    />

    <ImageView
            android:id="@+id/mImgMenu2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            app:layout_constraintCircle="@id/mImg1"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="140dp"
    />

    <ImageView
            android:id="@+id/mImgMenu3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorThree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
    />

    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
               android:id="@+id/mImg1"
               android:src="@mipmap/ic_launcher"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
    />



</androidx.constraintlayout.motion.widget.MotionLayout>